                  - bucket: !Ref S3Bucket
              - Effect: Allow
                Action:
                  - s3:ListBucket
                Resource: !Sub
                  - arn:aws:s3:::${bucket}
                  - bucket: !Ref S3Bucket
              - Effect: Allow
